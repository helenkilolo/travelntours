<!-- Add this CSS -->
<style>
  #image-container {
    scroll-snap-type: x mandatory;
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: 33%; /* Show only 3 items at a time */
    overflow-x: hidden; /* Hide extra images */
  }

  #image-container > div {
    scroll-snap-align: start;
  }
</style>

<!-- Add this JavaScript -->
<script>
  const container = document.getElementById("image-container");
  const leftBtn = document.getElementById("scroll-left");
  const rightBtn = document.getElementById("scroll-right");

  let currentScroll = 0;

  // Scroll Left
  leftBtn.addEventListener("click", () => {
    const containerWidth = container.clientWidth;
    currentScroll = Math.max(currentScroll - containerWidth, 0);
    container.scrollTo({ left: currentScroll, behavior: "smooth" });
  });

  // Scroll Right
  rightBtn.addEventListener("click", () => {
    const containerWidth = container.clientWidth;
    const maxScroll = container.scrollWidth - containerWidth;
    currentScroll = Math.min(currentScroll + containerWidth, maxScroll);
    container.scrollTo({ left: currentScroll, behavior: "smooth" });
  });
</script>


